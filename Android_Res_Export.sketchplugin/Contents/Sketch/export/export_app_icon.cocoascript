                    '    <background android:drawable="@mipmap/ic_launcher_background"/>\n' +
                    '    <foreground android:drawable="@mipmap/ic_launcher_foreground"/>\n' +
                    '</adaptive-icon>';

                writeContentToFile(xmlFilePath, xmlContent);

