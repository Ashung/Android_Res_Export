                    doc.saveArtboardOrSlice_toFile(background, outputPathForBackground);
                    doc.saveArtboardOrSlice_toFile(foreground, outputPathForForeground);

                    if (getPreferences(context, "use_imageoptim_after_export") == 1) {
                        imageOptim(outputPathForBackground);
                        imageOptim(outputPathForForeground);
                    }

